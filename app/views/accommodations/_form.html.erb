<div class="accommodation-form">
  <%= simple_form_for @accommodation do |f| %>
    <div class="form-inputs">
      <%= f.input :title, placeholder: "Space house"%>
      <%= f.input :address, placeholder: "Adress Street Nr" %>
      <%= f.input :price, placeholder: "$ 0,00" %>
      <%= f.input :planet, collection: Accommodation::PLANETS %>
      <%= f.input :category, collection: Accommodation::CATEGORIES %>
      <%= f.input :description, placeholder: "Write a short description" %>
      <%= f.input :photos, as: :file, input_html: { multiple: true } %>
    </div>
      <div class="form-actions">
        <%= f.button :submit, class: "btn btn-inner-gradient btn-inner-gradient-transition" %>
      </div>
  <% end %>
</div>
