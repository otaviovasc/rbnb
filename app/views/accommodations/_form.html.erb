<div class="container">
  <%= simple_form_for @accommodation do |f| %>
    <div class="form-inputs">
      <%= f.input :title %>
      <%= f.input :address %>
      <%= f.input :price %>
      <%# Change category to dropdown MENU (fixed list with categories) %>
      <%= f.input :category %>
      <%= f.input :description %>
      <%= f.input :photo, as: :file %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, class: "btn btn-primary" %>
    </div>
  <% end %>
  <%= link_to "Back to accommodations", accommodations_path %>
</div>
