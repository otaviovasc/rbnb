<div class="card-trip", >
  <%# Colocar no image_tag imagem referente à accommodation correta %>
  <% if @accommodation.photo.attached? %>
    <%= cl_image_tag @accommodation.photo.key, height: 300, crop: :fill %>
  <% else %>
    <%= image_tag "https://i.insider.com/56cdb126dd0895dd048b4793?width=600&format=jpg&auto=webp" %>
  <% end %>
  <div class="row">
    <div class="card-trip-infos">
      <div class="col-8">
        <p style="font-size:16px;"> <%= @accommodation.description %> </p>
      </div>

      <div class="col-4">
        <div class="card-trip-pricing">
          <%= image_tag "user_photo.jpg", class: "avatar-bordered card-trip-user" %>
          <h2>$ <%= @accommodation.price %> / day</h2>
          <%# Colocar no image_tag imagem referente ao user owner do imóvel %>
          <%= link_to "Book this place", new_accommodation_rental_path(@accommodation), class: "button-gradient", style: "text-decoration: none; float: right;"%>
        </div>
      </div>
    </div>
  </div>
</div>

