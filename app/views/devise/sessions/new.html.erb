<div class="background-gradient">
  <%= render "shared/navbar_login" if show_navbar? %>
  <div class="container-session">
    <div class="row justify-content-center">
      <div class="col-md-6 col-lg-4">
        <div class="card rounded-3 shadow-lg border-0">
          <div class="card-body">
            <h1 class="card-title text-center mb-4">Log in</h1>
                <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'login-form' }) do |f| %>
                <div class="form-inputs">
                  <div class="mb-3">
                    <%= f.input :email,
                                label: false,
                                required: true,
                                autofocus: true,
                                input_html: { class: 'form-control form-control-lg rounded-3', autocomplete: 'email', placeholder: 'Email' } %>
                  </div>
                  <div class="mb-3">
                    <%= f.input :password,
                                label: false,
                                required: true,
                                input_html: { class: 'form-control form-control-lg rounded-3', autocomplete: 'current-password', placeholder: 'Password' } %>
                  </div>
                  <div class="mb-3 form-check">
                    <%= f.input :remember_me,
                                label: 'Remember me',
                                as: :boolean,
                                input_html: { class: 'form-check-input' } if devise_mapping.rememberable? %>
                  </div>
                </div>
                <%= f.button :submit, "Log in", class: 'btn btn-lg w-100 mb-3 btn-login'%>
              <% end %>
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
