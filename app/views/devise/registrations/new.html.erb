<div class="background-gradient">
  <%= render "shared/navbar_login" if show_navbar? %>
  <div class="container-session py-5">
    <div class="row justify-content-center">
      <div class="col-md-6 col-lg-4">
        <div class="card">
          <div class="card-body rounded-3">
            <h1 class="card-title text-center mb-4">Sign up</h1>
                  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'login-form' }) do |f| %>
                  <%= f.error_notification %>

                  <div class="form-inputs">
                    <div class="mb-3">
                      <%= f.input :email,
                                  label: false,
                                  required: true,
                                  autofocus: true,
                                  input_html: { class: 'form-control form-control-lg rounded-3', autocomplete: 'email', placeholder: 'Email' } %>
                    </div>
                    <div class="mb-3">
                      <%= f.input :password,
                                  label: false,
                                  required: true,
                                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                                  input_html: { class: 'form-control form-control-lg rounded-3', autocomplete: "new-password", placeholder: 'Password' } %>
                    </div>
                    <div class="mb-3">
                      <%= f.input :password,
                                  label: false,
                                  required: true,
                                  input_html: { class: 'form-control form-control-lg rounded-3', autocomplete: "new-password", placeholder: 'Password' } %>
                    </div>
                  </div>
                  <%= f.button :submit, "Sign up", class: 'btn btn-lg w-100 mb-3 btn-login'%>
              <% end %>
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
