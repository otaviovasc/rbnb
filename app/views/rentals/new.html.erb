
<div class="row justify-content-center">
  <div class="col-6">
    <h1>Schedule your trip to <%= @accommodation.title %></h1>
    <%= simple_form_for([@accommodation, @rental]) do |f| %>
      <div class="form-inputs">
        <%= f.input :start_date, start_day: Date.today.day,
                                  html5: true%>
        <%= f.input :end_date, start_day: Date.today.day,
                                  html5: true%>
      </div>
      <div class="form-actions">
        <%= f.button :submit, class: "btn btn-primary btn-lg" %>
      </div>
    <% end %>
    <%= link_to "Back to accommodations", accommodation_path(@accommodation) %>
  </div>
</div>
