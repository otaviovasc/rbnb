<div class="container">
  <div class="row justify-content-center">
    <div class="col-6" data-controller="rental-price" data-rental-price-accprice-value="<%= @accommodation.price %>">
      <h1>Schedule your trip to <%= @accommodation.title %></h1>
      <%= simple_form_for([@accommodation, @rental]) do |f| %>
        <div class="form-inputs">
          <%= f.input :start_date, start_day: Date.today.day,
                                    html5: true,
                                    input_html: { data: {action: "change->rental-price#calculateTotalPrice", rental_price_target: "start_date"}}%>
          <%= f.input :end_date, start_day: Date.today.day,
                                    html5: true,
                                    input_html: { data: {action: "change->rental-price#calculateTotalPrice", rental_price_target: "end_date"} }%>
        </div>
        <p data-rental-price-target="calculation"></p>
        <p data-rental-price-target="price">Select dates</p>
        <div class="form-actions">
          <%= f.button :submit, class: "btn btn-primary btn-lg w-100" %>
        </div>
      <% end %>

      <%= link_to "Back to accommodations", accommodation_path(@accommodation), class: "btn btn-secondary btn-lg w-100 mt-2" %>
    </div>
  </div>
</div>
